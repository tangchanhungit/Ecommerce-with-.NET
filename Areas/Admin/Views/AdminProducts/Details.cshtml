@model Ecommerce_web_app.Models.Product

@{
	ViewData["Title"] = "Thông tin sản phẩm" + Model.ProductName;
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="card-body">
	<div class="header-sub-title col-md-6">
		<nav class="breadcrumb breadcrumb-dash">
			<a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon-home m-r-5"></i>Home</a>
			<a asp-area="Admin" asp-controller="AdminProducts" asp-action="Index" class="breadcrumb-item">Danh sách sản phẩm</a>
			<span class="breadcrumb-item active">Thông tin sản phẩm: @Model.ProductName</span>
		</nav>
	</div>
	<h4 class="card-title">Thông tin sản phẩm: @Model.ProductName</h4>
	<div class="table-reponsive">
		<table class="table">
			<tbody>
				<tr>
					<td>ID:</td>
					<td>@Model.ProductId</td>
				</tr>
				<tr>
					<td>Tên sản phẩm:</td>
					<td>@Model.ProductName</td>
				</tr>
				<tr>
					<td>Mô tả ngắn:</td>
					<td>@Model.ShortDesc</td>
				</tr>
				<tr>
					<td>Giá bán:</td>
					<td>@Model.Price</td>
				</tr>
				<tr>
					<td>Discount:</td>
					<td>@Model.Discount</td>
				</tr>
				<tr>
					<td>Active:</td>
					<td>
						@if (Model.Active)
						{
							<div class="switch m-r-10">
								<input type="checkbox" asp-for="Active" checked="" />
								<lable for="Active"></lable>

							</div>
						}
						else
						{
							<div class="switch m-r-10">
								<input type="checkbox" asp-for="Active"/>
								<lable for="Active"></lable>

							</div>
						}

					</td>
				</tr>
				<tr>
					<td>BestSellers:</td>
					<td>
						@if (Model.BestSellers)
						{
							<div class="switch m-r-10">
								<input type="checkbox" asp-for="BestSellers" checked="" />
								<lable for="BestSellers"></lable>

							</div>
						}
						else
						{
							<div class="switch m-r-10">
								<input type="checkbox" asp-for="BestSellers" />
								<lable for="BestSellers"></lable>

							</div>
						}
					</td>
				</tr>
				<tr>
					<td>HomeFlag:</td>
					<td>
						@if (Model.HomeFlag)
						{
							<div class="switch m-r-10">
								<input type="checkbox" asp-for="HomeFlag" checked="" />
								<lable for="HomeFlag"></lable>

							</div>
						}
						else
						{
							<div class="switch m-r-10">
								<input type="checkbox" asp-for="HomeFlag" />
								<lable for="HomeFlag"></lable>

							</div>
						}
					</td>
				</tr>
				<tr>
					<td>Danh mục:</td>
					<td>@Model.Cat.CatName</td>
				</tr>
				<tr>
					<td>Ngày tạo:</td>
					<td>@Model.DateCreated</td>
				</tr>
				<tr>
					<td>Ngày chỉnh sửa:</td>
					<td>@Model.DateModified</td>
				</tr>
				<tr>
					<td>MetaDesc:</td>
					<td>@Model.MetaDesc</td>
				</tr>
				<tr>
					<td>MetaKey:</td>
					<td>@Model.MetaKey</td>
				</tr>
				<tr>
					<td>Tags:</td>
					<td>@Model.Tags</td>
				</tr>
				<tr>
					<td>Ảnh đại diện:</td>
					<td>
						<img width="200px" height="200px" src="~/images/product/@Model.Thumb" alt="@Model.Title" />
					</td>
				</tr>
				<tr>
					<td>Mô sản phẩm:</td>
					<td>@Model.Desciption</td>
				</tr>
			</tbody>
		</table>
	</div>
</div>
