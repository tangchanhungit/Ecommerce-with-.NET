@model Ecommerce_web_app.Models.User

@{
	ViewData["Title"] = "Tạo mới tài khoản quản trị";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
	<div class="card-body">
		<h4>TẠO MỚI TÀI KHOẢN QUẢN TRỊ</h4>
		<form asp-asp-controller="AdminUsers" asp-for="" method="post">
			<div class="form-group">
				<label for="exampleInputUsername1">Họ và Tên</label>
				<input type="text" class="form-control" asp-for="FullName" placeholder="Username">
			</div>
			<div class="form-group">
				<label for="exampleInputEmail1">Email</label>
				<input type="text" class="form-control" asp-for="Email" placeholder="Email">
			</div>
			<div class="form-group">
				<label for="exampleInputPassword1">Quyền truy cập</label>
				<select class="custom-select" asp-for="RoleId" style="min-width:180px;" id="idrole" name="idrole" asp-items="ViewBag.QuyenTruyCap">
					<option value="0" disabled selected>Chọn quyền truy cập</option>
				</select>
			</div>
			<div class="form-check form-check-flat form-check-primary">
				<label class="form-check-label">
					<input asp-for="Active" type="checkbox" class="form-check-input">
					Remember me
				</label>
			</div>
			<button type="submit" class="btn btn-primary me-2">Tạo mới tài khoản</button>
			<button class="btn btn-light">Cancel</button>
		</form>
	</div>
</div>
