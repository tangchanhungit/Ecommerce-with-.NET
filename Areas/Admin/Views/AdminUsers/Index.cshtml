@model IEnumerable<Ecommerce_web_app.Models.User>

@{
	ViewData["Title"] = "Danh sách tài khoản quản trị";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-body">
	<div class="header-sub-title col-md-6">
		<nav class="breadcrumb breadcrumb-dash">
			<a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon-home m-r-5"></i>Home</a>
			<span class="breadcrumb-item active">Danh sách tài khoản</span>
		</nav>
	</div>
	<div class="row m-b-30">
		<div class="col-lg-12">
			<div class="d-md-flex">
				<div class="m-b-10 m-r-15">
					<select class="custom-select" style="min-width:180px;" id="idrole" name="idrole" asp-items="ViewBag.QuyenTruyCap">
						<option value="0" disabled selected>Chọn quyền truy cập</option>
					</select>
				</div>
				<div class="m-b-10">
					<select class="custom-select" style="min-width:200px;" id="idstatus" name="idstatus" asp-items="ViewBag.ListActive">
						<option value="" disabled selected>Chọn trạng thái</option>
					</select>
				</div>
			</div>
		</div>
	</div>
	<div class="col-sm">
		<div class=" col m-b-10 m-r-15">
			<a class="btn-wrapper">
				<a asp-controller="AdminUsers" asp-action="Create" class="btn btn-primary text-white me-0">Add User</a>
			</a>
		</div>
	</div>
	<div class="table-responsive">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>ID</th>
					<th>Họ và tên</th>
					<th>Email</th>
					<th>Lần truy cập cuối</th>
					<th>Quyền truy cập</th>
					<th>Trạng thái</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				@if (Model != null)
				{
					foreach (var item in Model)
					{
						<tr>
							<td>@item.UserId</td>
							<td>@item.FullName</td>
							<td>@item.Email</td>
							<td>@item.LastLogin</td>
							<td>@item.Role?.Description</td>
							<td>
								@if (item.Active)
								{
									<div class="d-flex align-items-center">
										<div class="badge badge-success badge-dot m-r-10"></div>
										<div>Active</div>
									</div>
								}
								else
								{
									<div class="d-flex align-items-center">
										<div class="badge badge-danger badge-dot m-r-10"></div>
										<div>Block</div>
									</div>
								}
							</td>
							<td>
								<a class="btn btn-info btn-rounded m-r-5" asp-area="Admin" asp-controller="AdminUsers" asp-action="Details" asp-route-id="@item.UserId">View</a>
								<a class="btn btn-success btn-rounded m-r-5" asp-area="Admin" asp-controller="AdminUsers" asp-action="Edit" asp-route-id="@item.UserId">Edit</a>
								<a class="btn btn-danger btn-rounded m-r-5" asp-area="Admin" asp-controller="AdminUsers" asp-action="Delete" asp-route-id="@item.UserId">Delete</a>
							</td>
						</tr>
					}
				}
			</tbody>
		</table>
	</div>
</div>
