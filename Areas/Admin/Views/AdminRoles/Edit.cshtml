@model Ecommerce_web_app.Models.Role

@{
    ViewData["Title"] = "Chỉnh sửa quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-body">
    <div class="header-sub-title col-md-6">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon-home m-r-5"></i>Home</a>
            <a asp-area="Admin" asp-controller="AdminRoles" asp-action="Index" class="breadcrumb-item">Forms</a>
            <span class="breadcrumb-item active">Chỉnh sửa quyền truy cập</span>
        </nav>
    </div>
    <h4 class="card-title">Chỉnh sửa quyền truy cập</h4>
    <form asp-action="Edit" asp-route-id="Model.RoleId" method="post" class="forms-sample">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="RoleId"/>
        <div class="form-row">
             <div class="form-group col-md-6">
                 <label>Role Name</label>
                 <input type="text" class="form-control" asp-for="RoleName" placeholder="Role Name" />
             </div>
        <div class="form-group col-md-6">
                <label>Description</label>
                <input type="text" class="form-control" asp-for="Description" placeholder="Description">
        </div>
            <button type="submit" class="btn btn-primary me-2">Save</button>
        </div>
    </form>
</div>


    
