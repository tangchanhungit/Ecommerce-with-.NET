@model IEnumerable<Ecommerce_web_app.Models.Role>

@{
	ViewData["Title"] = "Quản lý quyền truy cập";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="card-body">
	<div class="header-sub-title col-md-6">
		<nav class="breadcrumb breadcrumb-dash">
			<a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon-home m-r-5"></i>Home</a>
			<span class="breadcrumb-item active">Danh sách quyền truy cập</span>
		</nav>
	</div>
	<div class="row m-b-30">
		<div class="col-lg-8"></div>
		<div class="col-lg-4 text-right">
			<a class="btn btn-primary" asp-controller="AdminRoles" asp-action="Create" class="btn btn-primary text-white me-0">Add Role</a>
		</div>
	</div>
	<div class="table-responsive">
		<table class="table">
			<thead>
				<tr>
					<th>ID</th>
					<th>Name</th>
					<th>Mô tả</th>
					<th>#</th>
				</tr>
			</thead>
			<tbody>
				@if (Model != null)
				{
					foreach (var item in Model)
					{
						<tr>
							<th scope="row">@item.RoleId</th>
							<td>@item.RoleName</td>
							<td>@item.Description</td>
							<td>
								<a class="btn btn-info btn-rounded m-r-5" asp-area="Admin" asp-controller="AdminRoles" asp-action="Details" asp-route-id="@item.RoleId">View</a>
								<a class="btn btn-success btn-rounded m-r-5" asp-area="Admin" asp-controller="AdminRoles" asp-action="Edit" asp-route-id="@item.RoleId">Edit</a>
								<a class="btn btn-danger btn-rounded m-r-5" asp-area="Admin" asp-controller="AdminRoles" asp-action="Delete" asp-route-id="@item.RoleId">Delete</a>
							</td>

						</tr>
					}
				}
			</tbody>
		</table>
	</div>
</div>

