@model List<Order>
@if(Model!= null && Model.Count >0)
{
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-lg-8 table-responsive mb-5">
                <table class="table table-light table-borderless table-hover text-center mb-0">
                    <thead class="thead-dark">
                    <tbody class="align-middle">

                        <tr>
                            <th>ORDER</th>
                            <th>Ngày mua hàng</th>
                            <th>Ngày ship hàng</th>
                            <th>Trạng thái đơn hàng</th>
                            <th>Tổng tiền</th>
                        </tr>
                        @foreach(var item in Model){
                            <tr>
                                <td class="align-middle"><img src="img/product-1.jpg" alt="" style="width: 50px;"> @item.OrderId</td>
                                <td class="align-middle">@item.OrderDate</td>
                                <td class="align-middle">@item.ShipDate</td>
                                <td class="align-middle">@item.TranscatStatus.Status</td>
                                
                            </tr>
                        }
                    </tbody>
                            
                    </thead>
                        
                </table>
            </div>
        </div>
    </div>
}
else
{
    <p>Chưa có đơn hàng !</p>
}
