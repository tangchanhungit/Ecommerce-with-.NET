@model Ecommerce_web_app.ModelViews.ChangePasswordViewModel

<form asp-action="ChangePassword" asp-controller="Accounts" method="post" id="changePasswordForm">
	<div class="form-group">
		<label for="oldPassword">Mật khẩu cũ</label>
		<input asp-for="PasswordNow" type="password" class="form-control" id="oldPassword" required>
	</div>
	<div class="form-group">
		<label for="newPassword">Mật khẩu mới</label>
		<input asp-for="Password" type="password" class="form-control" id="newPassword"  required>
	</div>
	<div class="form-group">
		<label for="confirmPassword">Nhập lại mật khẩu mới</label>
		<input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPassword"  required>
	</div>
	<button type="submit" class="btn btn-primary btn-block">Lưu thay đổi</button>
</form>
